{
  "name": "Like Person",
  "version": "1.0.0",
  "manifest_version": 2,

  "description": "Extension that lets you like or hate anyone on Facebook",
  "icons": {
    "16": "images/icon16x16.png",
    "48": "images/icon48x48.png",
    "128": "images/icon128x128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/popup19x19.png",
      "38": "images/popup38x38.png"
    }, "default_title": "Like Person",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*.facebook.com/*","https://*.facebook.com/*"],
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": ["injected.js"],
  "content_security_policy": "script-src 'self' https://api.doolardoteach.com; object-src 'self'",
  "homepage_url": "http://dollardoteach.com",
  "options_page": "options.html",
  "permissions": ["tabs"]
}
